<div class="container">
  <h1 class="mb-1">{{realization.title}}</h1>
  <div class="">
    {{dateFormat realization.createdAt}}
  </div>
  <a href="/testapp/adminPanel/realizations" class="btn btn-secondary">Lista realizacji</a>
  <a href="/testapp/adminPanel/realizations/edit/{{realization._id}}" class="btn btn-info">Edytuj</a>

  <form action="/testapp/adminPanel/realizations/uploadmultiple/{{realization.slug}}"  enctype="multipart/form-data" method="POST">
    Select images: <input class="custom-file-input" type="file" name="myFiles" multiple>
    <input type="submit" value="Wgraj pliki" class="btn"/>
  </form>

  <div class="">
    <label for="">Wybierz główny obraz</label>
    <div class="dropdown">
  <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    Dropdown button
  </button>
  <div id="dropdown-images" class="{{realization.slug}} dropdown-menu col-1" aria-labelledby="dropdownMenuButton">
    {{#each realization.images}}
      <button  class="dropdown-item" type="button">
        <div class="card">
          <img src="\\{{this}}" class="card-img-top" alt="...">
        </div>
      </button>
    {{/each}}
  </div>
</div>
  </div>


  <div class="">
    {{{realization.sanitizedHtml}}}
  </div>
  <div class="">
    {{{realization.topImage}}}
  </div>


  <div class="card-columns">
    {{#each realization.images}}
    <div class="card">
      <img src="\\{{this}}" class="card-img-top" alt="...">
    </div>
    {{/each}}
  </div>

  </div>
</div>
