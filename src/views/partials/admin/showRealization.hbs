{{>admin/header}}
<div class="container-fluid p-0 pt-5">

<div class="pt-5 d-flex">
        <a href="/testapp/adminPanel/realizations" class="btn sun-danger-btn mt-5 ml-auto">Wróć do listy realizacji</a>
</div>

<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 mb-4 d-flex">

  <div class="text-center ml-auto pl-3">
    <h3 class="mb-1 pt-5">{{realization.title}}</h3>
    <small>{{dateFormat realization.createdAt}}</small>

      <div class="row no-gutters d-flex align-items-center justify-content-center">
        <label class="mx-2 " for="">Wybierz obraz do karty:</label>
        <div class="dropdown">
      <button class="btn dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        obrazy
      </button>
      <div id="dropdown-images" class="{{realization.slug}} dropdown-menu col-1" aria-labelledby="dropdownMenuButton">
        {{#each realization.images}}
          <button  class="dropdown-item" type="button">
            <div class="card">
              <img src="\\{{this}}" class="card-img-top" alt="...">
            </div>
          </button>
        {{/each}}
      </div>
    </div>
      </div>

      <a href="/testapp/adminPanel/realizations/edit/{{realization._id}}" class="btn sun-success-btn mt-2">Edytuj tekst realizacji</a>


      <form action="/testapp/adminPanel/realizations/uploadmultiple/{{realization.slug}}"  enctype="multipart/form-data" method="POST">
              <!-- Wybierz zdjęcia: <input class="custom-file-input" type="file" name="myFiles" multiple> -->

      <div class="input-group mb-3">
            <div class="custom-file">
              <label class="custom-file-label" for="inputGroupFile01">Wybierz zdjęcia</label>
                <input name="myFiles" type="file" class="custom-file-input" id="inputGroupFile01" multiple>

              </div>
              <input type="submit" value="Załaduj" class="btn"/>
            </div>

            </form>
  </div>
  <div class="col realization-card mr-auto">
    <div class="card h-100 mt-2">
      <div class="layer">

      </div>
      <img src="{{realization.topImage}}" class="card-img px-3 pt-3" alt="...">
      <div class="card-body pb-0">
        <h6 class="card-title">{{realization.title}}</h6>
        <p class="card-text">{{realization.description}}</p>
      </div>
      <div class=" row card-footer pt-0">
        <p class="card-text my-auto pl-3"><small class="text-muted">{{dateFormat realization.createdAt}}</small></p>
        <a href="testapp/realization/{{realization.slug}}" class="btn ml-auto mr-2" type="button" name="button">
          <i class="fas fa-chevron-circle-right"></i>
        </a>
      </div>
    </div>
  </div>
</div>


<!-- !!!!!!!!!!!!!!!! -->
<section id="realization" class="h-100">
<div class="row dark-background align-items-center">
  <div class="col-6 mx-auto text-center pt-2">
    <p class="h3">{{realization.title}}</p>
    {{{realization.sanitizedHtml}}}
  </div>
</div>
<div class="row no-gutters py-4">
  <div class="h4 col text-center">Galeria</div>
  <div class="w-100"></div>
  <div class="card-columns col-10 mx-auto">
    {{#each realization.images}}
      <a href="#" data-toggle="modal" data-target="#realization-gallery-modal" data-imgsrc="\\{{this}}" data-slide-to="{{@index}}">
        <div class="card">
          <img src="\\{{this}}" class="card-img-top" alt="...">
        </div>
      </a>
        {{else}}
        <p>No images</p>
    {{/each}}
  </div>
</div>
</section>
